{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "Player do spotify.",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "start": "npx webpack-cli serve"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josimarrocha/js-tdd-spotify-player.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Josimar Santos da rocha <rocha_josimar@yahoo.com.br>",
  "license": "MIT",
  "devDependencies": {
    "@webpack-cli/serve": "^0.1.8",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.11.9",
    "jsdom": "^16.5.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "webpack-cli": "^3.3.4"
  },
  "dependencies": {
    "spotify-wrapper": "^2.1.0",
    "webpack": "^4.33.0",
    "webpack-dev-server": "^3.7.1"
  }
}
